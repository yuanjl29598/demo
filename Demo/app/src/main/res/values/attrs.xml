<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 土豪金 -->
    <declare-styleable name="ShimmerView">
        <attr name="reflectionColor" format="color" />
    </declare-styleable>
    <declare-styleable name="MineItemView">

        <!-- <attr name="android:text"/> -->
        <attr name="android:src" />
        <attr name="appendText" format="string" />
    </declare-styleable>

    <declare-styleable name="MineRewardView">
        <attr name="android:src" />
        <attr name="addText" format="string" />
    </declare-styleable>
    <declare-styleable name="BankCardItemView">

        <!-- <attr name="android:text"/> -->
        <attr name="tvText" format="string" />
        <attr name="editHint" format="string" />
    </declare-styleable>
    <declare-styleable name="MineQuestionView">

        <!-- <attr name="android:text"/> -->
        <attr name="android:src" />
        <attr name="question" format="string" />
        <attr name="answer" format="string" />
    </declare-styleable>
    <declare-styleable name="MineSafeView">

        <!-- <attr name="android:text"/> -->
        <attr name="textLift" format="string" />
        <attr name="textRight" format="string" />
        <attr name="isShow" format="boolean"></attr>
        <attr name="leftSize" format="float" />
        <attr name="rightSize" format="float" />
        <attr name="leftColor" format="string" />
    </declare-styleable>
    <declare-styleable name="RatioLayout">
        <attr name="ratio" format="float" />
    </declare-styleable>
    <declare-styleable name="LockPatternView">
        <attr name="aspect" format="string" />
    </declare-styleable>

    <attr name="circularProgressBarStyle" format="reference" />

    <declare-styleable name="HoloCircularProgressBar">
        <attr name="stroke_width" format="dimension" />
        <attr name="progress" format="float" />
        <attr name="marker_progress" format="float" />
        <attr name="progress_color" format="color" />
        <attr name="progress_background_color" format="color" />
        <attr name="thumb_visible" format="boolean" />
        <attr name="marker_visible" format="boolean" />
        <attr name="android:gravity" />
    </declare-styleable>
</resources>